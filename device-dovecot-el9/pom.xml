                </source>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/imap/show</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/etc/device/services/mail/pop3</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>2775</filemode>
              <username>root</username>
              <groupname>device</groupname>
            </mapping>
            <mapping>
              <directory>/usr/libexec/device/services/mail/pop3</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>755</filemode>
              <username>root</username>
              <groupname>root</groupname>
            </mapping>
            <mapping>
              <directory>/usr/libexec/device/services/mail/pop3</directory>
              <directoryIncluded>false</directoryIncluded>
              <filemode>755</filemode>
              <username>root</username>
              <groupname>root</groupname>
              <sources>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/pop3/enable</location>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/pop3/disable</location>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/pop3/set</location>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/pop3/show</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/etc/device/services/mail/submission</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>2775</filemode>
              <username>root</username>
              <groupname>device</groupname>
            </mapping>
            <mapping>
              <directory>/usr/libexec/device/services/mail/submission</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>755</filemode>
              <username>root</username>
              <groupname>root</groupname>
            </mapping>
            <mapping>
              <directory>/usr/libexec/device/services/mail/submission</directory>
              <directoryIncluded>false</directoryIncluded>
              <filemode>755</filemode>
              <username>root</username>
              <groupname>root</groupname>
              <sources>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/submission/enable</location>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/submission/disable</location>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/submission/set</location>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device/services/mail/submission/show</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/var/spool/imap</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>2770</filemode>
              <username>vmail</username>
              <groupname>vmail</groupname>
            </mapping>
          </mappings>
          <preinstallScriptlet>
            <scriptFile>target/classes/preinstall</scriptFile>
            <fileEncoding>utf-8</fileEncoding>
          </preinstallScriptlet>
          <postinstallScriptlet>
            <scriptFile>target/classes/postinstall</scriptFile>
            <fileEncoding>utf-8</fileEncoding>
          </postinstallScriptlet>
          <preremoveScriptlet>
            <scriptFile>target/classes/preremove</scriptFile>
            <fileEncoding>utf-8</fileEncoding>
          </preremoveScriptlet>
          <requires>
            <require>dovecot</require>
            <require>device</require>
          </requires>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>

