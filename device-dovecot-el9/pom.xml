                <source>
                  <location>target/classes/usr/libexec/device-dovecot-autodiscovery-lmtp</location>
                  <destination>20-lmtp</destination>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device-dovecot-autodiscovery-submission</location>
                  <destination>20-submission</destination>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device-dovecot-autodiscovery-acl</location>
                  <destination>20-acl</destination>
                </source>
                <source>
                  <location>target/classes/usr/libexec/device-dovecot-autodiscovery-dovecot</location>
                  <destination>50-dovecot</destination>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/libexec/device-postdiscovery</directory>
              <directoryIncluded>false</directoryIncluded>
              <filemode>755</filemode>
              <username>root</username>
              <groupname>root</groupname>
              <sources>
                <source>
                  <location>target/classes/usr/libexec/device-dovecot-postdiscovery</location>
                  <destination>dovecot</destination>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/libexec/device-postdiscovery/dovecot.d</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>755</filemode>
              <username>root</username>
              <groupname>root</groupname>
            </mapping>
            <mapping>
              <directory>/usr/lib/systemd/system</directory>
              <directoryIncluded>false</directoryIncluded>
              <filemode>644</filemode>
              <username>root</username>
              <groupname>root</groupname>
              <sources>
                <source>
                  <location>target/classes/usr/lib/systemd/system/dovecot-autodiscovery.service</location>
                  <destination>dovecot-autodiscovery.service</destination>
                </source>
                <source>
                  <location>target/classes/usr/lib/systemd/system/dovecot-autodiscovery.target</location>
                  <destination>dovecot-autodiscovery.target</destination>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/lib/systemd/system</directory>
              <directoryIncluded>false</directoryIncluded>
              <filemode>644</filemode>
              <username>root</username>
              <groupname>root</groupname>
