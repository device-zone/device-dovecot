                  <destination>dovecot-postdiscovery.service</destination>
                </source>
                <source>
                  <location>target/classes/usr/lib/systemd/system/dovecot-postdiscovery.target</location>
                  <destination>dovecot-postdiscovery.target</destination>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/etc/device/services/mail/imap</directory>
              <directoryIncluded>true</directoryIncluded>
              <filemode>2775</filemode>
              <username>root</username>
              <groupname>device</groupname>
            </mapping>
            <mapping>
